<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Name -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Название *"
            android:textSize="14sp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/nameInput"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Название кошелька"
            android:textSize="14sp"
            android:textColor="#FFFFFF"
            android:textColorHint="#9CA3AF"
            android:background="@drawable/spinner_background"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:layout_marginBottom="16dp" />

        <!-- Requisite -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Реквизит (16 цифр) *"
            android:textSize="14sp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/valueInput"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="1234567890123456"
            android:textSize="14sp"
            android:textColor="#FFFFFF"
            android:textColorHint="#9CA3AF"
            android:fontFamily="monospace"
            android:background="@drawable/spinner_background"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/valueCounter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0/16 цифр"
            android:textSize="12sp"
            android:textColor="#9CA3AF"
            android:layout_marginBottom="16dp" />

        <!-- Email -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Почта"
            android:textSize="14sp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/emailInput"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="email@example.com"
            android:inputType="textEmailAddress"
            android:textSize="14sp"
            android:textColor="#FFFFFF"
            android:textColorHint="#9CA3AF"
            android:background="@drawable/spinner_background"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:layout_marginBottom="16dp" />

        <!-- Password -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Пароль"
            android:textSize="14sp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/passwordInput"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Пароль"
            android:inputType="textPassword"
            android:textSize="14sp"
            android:textColor="#FFFFFF"
            android:textColorHint="#9CA3AF"
            android:background="@drawable/spinner_background"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:layout_marginBottom="16dp" />

        <!-- Is Active -->
        <CheckBox
            android:id="@+id/isActiveCheckbox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Сделать активным"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:buttonTint="#22C55E" />

    </LinearLayout>

</ScrollView>


<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="0dp"
    android:background="@drawable/card_elevated">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header with name and buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/walletNameText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Кошелек #1"
                    android:textSize="16sp"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/activeBadge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Активен"
                    android:textSize="11sp"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:background="@drawable/badge_active"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:visibility="gone" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/editButton"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:background="@drawable/button_ripple"
                    android:src="@android:drawable/ic_menu_edit"
                    android:tint="#2563EB"
                    android:contentDescription="Редактировать"
                    android:padding="8dp" />

                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/deleteButton"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/button_ripple"
                    android:src="@android:drawable/ic_menu_delete"
                    android:tint="#EF4444"
                    android:contentDescription="Удалить"
                    android:padding="8dp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Requisite -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Реквизит (16 цифр)"
            android:textSize="12sp"
            android:textColor="#9CA3AF"
            android:layout_marginBottom="4dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#111827"
            android:padding="12dp"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/requisiteText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="1234567890123456"
                android:textSize="14sp"
                android:textColor="#FFFFFF"
                android:fontFamily="monospace" />

        </LinearLayout>

        <!-- Email (if exists) -->
        <TextView
            android:id="@+id/emailLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Почта"
            android:textSize="12sp"
            android:textColor="#9CA3AF"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/emailContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#111827"
            android:padding="12dp"
            android:layout_marginBottom="8dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/emailText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="email@example.com"
                android:textSize="14sp"
                android:textColor="#FFFFFF" />

        </LinearLayout>

        <!-- Password (if exists, show dots) -->
        <TextView
            android:id="@+id/passwordLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Пароль"
            android:textSize="12sp"
            android:textColor="#9CA3AF"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/passwordContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#111827"
            android:padding="12dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/passwordText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="••••••••"
                android:textSize="14sp"
                android:textColor="#FFFFFF"
                android:fontFamily="monospace" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>

